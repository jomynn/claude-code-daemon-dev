{
  "name": "claude-code-daemon",
  "version": "1.0.0",
  "description": "Advanced monitoring and management system for Claude Code usage",
  "main": "src/api/server.js",
  "scripts": {
    "start": "node src/api/server.js",
    "dev": "nodemon src/api/server.js",
    "daemon": "node src/daemon/manager.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "npm run lint && npm test",
    "docker:build": "docker build -t claude-daemon .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "setup": "bash scripts/setup.sh",
    "migrate": "node scripts/migrate.js",
    "seed": "node tools/data-generator.js",
    "backup": "bash scripts/backup.sh",
    "deploy": "bash scripts/deploy.sh",
    "load-test": "node tools/load-test.js",
    "health-check": "node tools/health-check.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "nodemailer": "^6.9.7",
    "winston": "^3.11.0",
    "cron": "^3.1.6",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "axios": "^1.6.2",
    "chart.js": "^4.4.0",
    "socket.io": "^4.7.4",
    "ejs": "^3.1.9"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "@types/node": "^20.10.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "claude-code",
    "ai",
    "monitoring",
    "daemon",
    "usage-tracking",
    "bmad-method"
  ],
  "author": "Your Name",
  "license": "MIT"
}