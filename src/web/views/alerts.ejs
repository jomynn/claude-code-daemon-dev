<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/static/css/dashboard.css">
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div class="container">
        <header>
            <h1>Alerts & Notifications</h1>
            <nav>
                <a href="/">Dashboard</a>
                <a href="/usage">Usage Analytics</a>
                <a href="/alerts" class="active">Alerts</a>
                <a href="/projects">Projects</a>
                <a href="/workspace">Workspace</a>
            </nav>
            <div class="status-indicator">
                <span id="connection-status" class="status-dot"></span>
                <span>Live</span>
            </div>
        </header>

        <main>
            <div class="alerts-controls">
                <div class="control-group">
                    <label for="severity-filter">Severity:</label>
                    <select id="severity-filter">
                        <option value="">All</option>
                        <option value="info">Info</option>
                        <option value="warning">Warning</option>
                        <option value="critical">Critical</option>
                    </select>
                </div>

                <div class="control-group">
                    <label for="type-filter">Type:</label>
                    <select id="type-filter">
                        <option value="">All</option>
                        <option value="usage-warning">Usage Warning</option>
                        <option value="limit-warning">Limit Warning</option>
                        <option value="prediction">Prediction</option>
                        <option value="system">System</option>
                    </select>
                </div>

                <div class="control-group">
                    <button id="clear-alerts" class="btn danger">Clear All</button>
                    <button id="test-alert" class="btn">Test Alert</button>
                    <button id="refresh-alerts" class="btn">Refresh</button>
                </div>
            </div>

            <div class="alert-stats">
                <div class="stat-card">
                    <h3>Total Alerts</h3>
                    <div class="stat-value" id="total-alerts">0</div>
                    <div class="stat-label">Last 24 Hours</div>
                </div>

                <div class="stat-card">
                    <h3>Critical Alerts</h3>
                    <div class="stat-value critical" id="critical-count">0</div>
                    <div class="stat-label">Requiring Attention</div>
                </div>

                <div class="stat-card">
                    <h3>Notification Channels</h3>
                    <div class="stat-value" id="channel-count">0</div>
                    <div class="stat-label">Active Channels</div>
                </div>

                <div class="stat-card">
                    <h3>Response Time</h3>
                    <div class="stat-value" id="response-time">< 1s</div>
                    <div class="stat-label">Average</div>
                </div>
            </div>

            <div class="live-alerts">
                <h3>Live Alert Feed</h3>
                <div class="alert-feed" id="alert-feed">
                    <!-- Live alerts will appear here -->
                </div>
            </div>

            <div class="alerts-history">
                <h3>Alert History</h3>
                <div class="history-controls">
                    <input type="text" id="search-alerts" placeholder="Search alerts...">
                    <button id="export-alerts" class="btn">Export</button>
                </div>
                <div class="alerts-list" id="alerts-history">
                    <!-- Historical alerts will be loaded here -->
                </div>
                <div class="pagination">
                    <button id="prev-page" class="btn">Previous</button>
                    <span id="page-info">Page 1 of 1</span>
                    <button id="next-page" class="btn">Next</button>
                </div>
            </div>

            <div class="notification-config">
                <h3>Notification Configuration</h3>
                <div class="config-section">
                    <h4>Channels</h4>
                    <div id="channels-list" class="channels-list">
                        <!-- Notification channels will be listed here -->
                    </div>
                </div>

                <div class="config-section">
                    <h4>Thresholds</h4>
                    <div class="threshold-controls">
                        <div class="threshold-item">
                            <label for="usage-threshold">Usage Warning (%):</label>
                            <input type="number" id="usage-threshold" min="1" max="100" value="80">
                        </div>
                        <div class="threshold-item">
                            <label for="critical-threshold">Critical Alert (%):</label>
                            <input type="number" id="critical-threshold" min="1" max="100" value="95">
                        </div>
                        <div class="threshold-item">
                            <label for="prediction-threshold">Prediction Alert (hours):</label>
                            <input type="number" id="prediction-threshold" min="1" max="24" value="2">
                        </div>
                    </div>
                    <button id="save-thresholds" class="btn">Save Settings</button>
                </div>
            </div>
        </main>

        <footer>
            <p>Claude Code Daemon &copy; 2024 | Environment: <%= env %></p>
        </footer>
    </div>

    <script src="/static/js/alerts.js"></script>
</body>
</html>

<style>
.alerts-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    padding: 20px;
    background: var(--card-bg);
    border-radius: 8px;
    border: 1px solid var(--border-color);
    flex-wrap: wrap;
    gap: 15px;
}

.control-group {
    display: flex;
    align-items: center;
    gap: 10px;
}

.control-group label {
    color: var(--text-secondary);
    font-size: 14px;
    min-width: 70px;
}

.control-group select,
.control-group input {
    background: var(--dark-bg);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
    padding: 8px 12px;
    border-radius: 4px;
    min-width: 120px;
}

.btn {
    background: var(--primary-color);
    color: white;
    border: none;
    padding: 8px 16px;
    border-radius: 4px;
    cursor: pointer;
    font-size: 14px;
    transition: background 0.3s;
}

.btn:hover {
    background: #1976D2;
}

.btn.danger {
    background: var(--danger-color);
}

.btn.danger:hover {
    background: #d32f2f;
}

.alert-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
}

.stat-value.critical {
    color: var(--danger-color);
}

.live-alerts {
    background: var(--card-bg);
    padding: 20px;
    border-radius: 8px;
    border: 1px solid var(--border-color);
    margin-bottom: 30px;
}

.alert-feed {
    max-height: 300px;
    overflow-y: auto;
    border: 1px solid var(--border-color);
    border-radius: 4px;
    padding: 10px;
    margin-top: 15px;
}

.alerts-history {
    background: var(--card-bg);
    padding: 20px;
    border-radius: 8px;
    border: 1px solid var(--border-color);
    margin-bottom: 30px;
}

.history-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
}

.history-controls input {
    background: var(--dark-bg);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
    padding: 8px 12px;
    border-radius: 4px;
    width: 250px;
}

.alerts-list {
    max-height: 500px;
    overflow-y: auto;
}

.alert-item {
    padding: 15px;
    margin-bottom: 10px;
    border-radius: 4px;
    border-left: 4px solid;
    background: rgba(255, 255, 255, 0.05);
    transition: background 0.3s;
}

.alert-item:hover {
    background: rgba(255, 255, 255, 0.08);
}

.alert-item.info {
    border-color: var(--primary-color);
}

.alert-item.warning {
    border-color: var(--warning-color);
}

.alert-item.critical {
    border-color: var(--danger-color);
}

.alert-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
}

.alert-type {
    font-weight: 500;
    color: var(--text-primary);
}

.alert-time {
    font-size: 12px;
    color: var(--text-secondary);
}

.alert-severity {
    padding: 2px 8px;
    border-radius: 12px;
    font-size: 11px;
    text-transform: uppercase;
    font-weight: 500;
}

.alert-severity.info {
    background: rgba(33, 150, 243, 0.2);
    color: var(--primary-color);
}

.alert-severity.warning {
    background: rgba(255, 193, 7, 0.2);
    color: var(--warning-color);
}

.alert-severity.critical {
    background: rgba(244, 67, 54, 0.2);
    color: var(--danger-color);
}

.alert-message {
    color: var(--text-primary);
    margin-bottom: 8px;
}

.alert-data {
    font-size: 12px;
    color: var(--text-secondary);
    background: rgba(0, 0, 0, 0.3);
    padding: 8px;
    border-radius: 4px;
    font-family: monospace;
}

.pagination {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 15px;
    margin-top: 20px;
}

.notification-config {
    background: var(--card-bg);
    padding: 20px;
    border-radius: 8px;
    border: 1px solid var(--border-color);
}

.config-section {
    margin-bottom: 30px;
}

.config-section h4 {
    color: var(--text-primary);
    margin-bottom: 15px;
    font-size: 16px;
}

.channels-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 15px;
}

.channel-item {
    padding: 15px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 4px;
    border: 1px solid var(--border-color);
}

.channel-name {
    font-weight: 500;
    color: var(--text-primary);
    margin-bottom: 5px;
}

.channel-status {
    font-size: 12px;
}

.channel-status.active {
    color: var(--success-color);
}

.channel-status.inactive {
    color: var(--danger-color);
}

.threshold-controls {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 15px;
    margin-bottom: 20px;
}

.threshold-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 4px;
}

.threshold-item label {
    color: var(--text-secondary);
    font-size: 14px;
}

.threshold-item input {
    background: var(--dark-bg);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
    padding: 6px 10px;
    border-radius: 4px;
    width: 80px;
}

@media (max-width: 768px) {
    .alerts-controls {
        flex-direction: column;
        align-items: stretch;
    }

    .control-group {
        justify-content: space-between;
    }

    .history-controls {
        flex-direction: column;
        gap: 10px;
    }

    .threshold-controls {
        grid-template-columns: 1fr;
    }

    .threshold-item {
        flex-direction: column;
        gap: 8px;
    }
}
</style>