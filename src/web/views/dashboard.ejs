<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/static/css/dashboard.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
    <div class="container">
        <header>
            <h1>Claude Code Daemon Dashboard</h1>
            <nav>
                <a href="/" class="active">Dashboard</a>
                <a href="/usage">Usage Analytics</a>
                <a href="/alerts">Alerts</a>
                <a href="/projects">Projects</a>
                <a href="/workspace">Workspace</a>
                <a href="/logs">Logs</a>
            </nav>
            <div class="status-indicator">
                <span id="connection-status" class="status-dot"></span>
                <span>Live</span>
            </div>
        </header>

        <main>
            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Current Usage</h3>
                    <div class="stat-value" id="current-tokens">0</div>
                    <div class="stat-label">Tokens</div>
                    <div class="stat-change" id="tokens-change">+0%</div>
                </div>

                <div class="stat-card">
                    <h3>Requests/Hour</h3>
                    <div class="stat-value" id="requests-hour">0</div>
                    <div class="stat-label">Requests</div>
                    <div class="stat-change" id="requests-change">+0%</div>
                </div>

                <div class="stat-card">
                    <h3>Usage Limit</h3>
                    <div class="progress-bar">
                        <div class="progress-fill" id="usage-progress" style="width: 0%"></div>
                    </div>
                    <div class="stat-label"><span id="usage-percent">0</span>% Used</div>
                </div>

                <div class="stat-card">
                    <h3>Time Remaining</h3>
                    <div class="stat-value" id="time-remaining">--</div>
                    <div class="stat-label">Hours</div>
                    <div class="stat-subtitle" id="limit-prediction">At current rate</div>
                </div>
            </div>

            <!-- Active Workspace Status -->
            <div class="workspace-status-section">
                <h3>Active Workspace Status</h3>
                <div class="workspace-grid">
                    <div class="workspace-card">
                        <div class="workspace-header">
                            <h4>üéØ Current Project</h4>
                            <span class="status-badge" id="project-status-badge">No Project</span>
                        </div>
                        <div class="workspace-details">
                            <div class="detail-item">
                                <span class="detail-label">Project Name:</span>
                                <span class="detail-value" id="active-project-name">None selected</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Project Path:</span>
                                <span class="detail-value" id="active-project-path">--</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Priority:</span>
                                <span class="detail-value" id="active-project-priority">--</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Last Activity:</span>
                                <span class="detail-value" id="active-project-activity">--</span>
                            </div>
                        </div>
                        <div class="workspace-actions">
                            <button id="open-workspace-btn" class="btn btn-small" disabled>Open Workspace</button>
                        </div>
                    </div>

                    <div class="workspace-card">
                        <div class="workspace-header">
                            <h4>ü§ñ Claude Code Status</h4>
                            <span class="status-badge stopped" id="claude-status-indicator">Stopped</span>
                        </div>
                        <div class="workspace-details">
                            <div class="detail-item">
                                <span class="detail-label">Session Status:</span>
                                <span class="detail-value" id="claude-session-status">Not running</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Uptime:</span>
                                <span class="detail-value" id="claude-session-uptime">00:00:00</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Model:</span>
                                <span class="detail-value" id="claude-current-model">claude-3-5-sonnet-20241022</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Messages:</span>
                                <span class="detail-value" id="claude-message-count">0</span>
                            </div>
                        </div>
                        <div class="workspace-actions">
                            <button id="start-claude-dashboard-btn" class="btn btn-small btn-success">Start Claude</button>
                            <button id="stop-claude-dashboard-btn" class="btn btn-small btn-danger" disabled>Stop</button>
                        </div>
                    </div>

                    <div class="workspace-card">
                        <div class="workspace-header">
                            <h4>‚ö° BMAD Workflow</h4>
                            <span class="status-badge stopped" id="bmad-status-indicator">Inactive</span>
                        </div>
                        <div class="workspace-details">
                            <div class="detail-item">
                                <span class="detail-label">Workflow Type:</span>
                                <span class="detail-value" id="bmad-workflow-type">None</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Active Agents:</span>
                                <span class="detail-value" id="bmad-active-agents">0</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Current Phase:</span>
                                <span class="detail-value" id="bmad-current-phase">--</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Progress:</span>
                                <span class="detail-value" id="bmad-progress">0%</span>
                            </div>
                        </div>
                        <div class="workspace-actions">
                            <button id="start-bmad-dashboard-btn" class="btn btn-small btn-primary" disabled>Start BMAD</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quick Actions Panel -->
            <div class="quick-actions-section">
                <h3>Quick Actions</h3>
                <div class="actions-grid">
                    <button class="action-btn" id="create-project-action">
                        <div class="action-icon">üìÅ</div>
                        <div class="action-title">New Project</div>
                        <div class="action-desc">Create a new project</div>
                    </button>
                    <button class="action-btn" id="open-workspace-action">
                        <div class="action-icon">üöÄ</div>
                        <div class="action-title">Open Workspace</div>
                        <div class="action-desc">Launch workspace interface</div>
                    </button>
                    <button class="action-btn" id="view-projects-action">
                        <div class="action-icon">üìä</div>
                        <div class="action-title">Manage Projects</div>
                        <div class="action-desc">View and manage all projects</div>
                    </button>
                    <button class="action-btn" id="view-logs-action">
                        <div class="action-icon">üìã</div>
                        <div class="action-title">View Logs</div>
                        <div class="action-desc">Check system logs</div>
                    </button>
                </div>
            </div>

            <div class="charts-grid">
                <div class="chart-container">
                    <h3>Usage Trend (24 Hours)</h3>
                    <canvas id="usage-chart"></canvas>
                </div>

                <div class="chart-container">
                    <h3>Request Rate</h3>
                    <canvas id="request-chart"></canvas>
                </div>
            </div>

            <div class="alerts-section">
                <h3>Recent Alerts</h3>
                <div id="alerts-list" class="alerts-list">
                    <!-- Alerts will be populated here -->
                </div>
            </div>

            <div class="system-info">
                <h3>System Status</h3>
                <div class="info-grid">
                    <div class="info-item">
                        <span class="info-label">Daemon Status:</span>
                        <span class="info-value" id="daemon-status">Running</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Uptime:</span>
                        <span class="info-value" id="uptime">0h 0m</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Memory Usage:</span>
                        <span class="info-value" id="memory-usage">0 MB</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Version:</span>
                        <span class="info-value">1.0.0</span>
                    </div>
                </div>
            </div>
        </main>

        <footer>
            <p>Claude Code Daemon &copy; 2024 | Environment: <%= env %></p>
        </footer>
    </div>

    <script src="/static/js/dashboard.js"></script>
</body>
</html>