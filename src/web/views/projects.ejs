        }

        .projects-detail-view .project-description {
            margin-bottom: 16px;
            padding: 16px;
            background: var(--bg-quaternary, #f8f9fa);
            border-radius: 8px;
            border-left: 4px solid var(--accent-primary, #2196F3);
